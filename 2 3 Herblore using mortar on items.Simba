//Resizable-screen mode
//have x as 14
//Have VBO on
program new;
{$i AeroLib/AeroLib.Simba}

Procedure ChickenCheck;
var
  color_ChickenYellow : TColEx;
  foundPnt    : TPoint;
begin
  color_ChickenYellow.create(11730173, 1, 1.26, 0.03);
  if color_ChickenYellow.findIn(AREA_MS, foundPnt) then
  begin
    writeln('Found color ChickenYellow'+toStr(foundPnt));
    //click on minimap
    MoveMouse(757, 121);
    wait(1000);
    FastClick(Mouse_left);
    wait(9000);

    //click on minimap 2nd time
    MoveMouse(613, 113);
    wait(1000);
    FastClick(Mouse_left);
    wait(9000);
  end;
end;

Procedure MimeCheck;
var
  color_CurtainRed : TColEx;
  color_BankBoxWhite : TColEx;
  foundPnt    : TPoint;
  x, y : integer;
begin
  color_CurtainRed.create(1117282, 1, 1.26, 0.03);
  color_BankBoxWhite.create(16777215, 1, 1.26, 0.03);
  if color_CurtainRed.findIn(AREA_MS, foundPnt) then
  begin
    writeln('Found color color_CurtainRed'+toStr(foundPnt));
    //leftclick on inv tab
    MoveMouse(697, 514);
    wait(200);
    FastClick(Mouse_left);

    //rightclick on ring
    MoveMouse(733, 414);
    wait(200);
    FastClick(Mouse_right);

    //leftclick on ring
    GetMousePos(x, y);
    MoveMouse(x, y + 30);
    wait(200);
    FastClick(Mouse_left);

    //leftclick on Emps-Wars
    MoveMouse(269, 452);
    wait(200);
    FastClick(Mouse_right);

    //leftclick on map
    MoveMouse(683, 140);
    wait(200);
    FastClick(Mouse_right);
    wait(5000);
    if color_BankBoxWhite.findIn(AREA_MS, foundPnt) then
    begin
      writeln('Found color color_BankBoxWhite'+toStr(foundPnt));
      //leftclick on bankbox
      HumanMMouse(foundPnt, 0, 0);
      FastClick(Mouse_left);
    end;
  end;
end;

Procedure DoAll;
var
  x, y : integer;
begin
//open bank
  MoveMouse(442, 304);
  wait(200);
  FastClick(Mouse_left);

//deposite all
  MoveMouse(442, 339);
  wait(1100);
  FastClick(Mouse_left);

//leftclick on mortar
  MoveMouse(56, 135);
  wait(200);
  FastClick(Mouse_left);

//rightclick on ingredient
  MoveMouse(99, 132);
  wait(200);
  FastClick(Mouse_right);

//leftclick on withdraw all
  GetMousePos(x, y);
  MoveMouse(x, y + 80);
  wait(200);
  FastClick(Mouse_left);

//exit bank
  MoveMouse(490, 64);
  wait(200);
  FastClick(Mouse_left);

//combine herbs with vials
  MoveMouse(611, 252);
  wait(200);
  FastClick(Mouse_left);
  MoveMouse(657, 258);
  wait(200);
  FastClick(Mouse_left);
  wait(random(27000,28000));
  if (random(1,50)=50) then
  begin
    wait(random(1000,15000));
  end;
end;
begin
  initAL;
  repeat
    DoAll;
    ChickenCheck;
    wait(100);
    ChickenCheck;
    MimeCheck;
  Until(False);
end.
