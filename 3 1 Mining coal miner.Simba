  //Click on Rock 2
  MoveMouse(395, 337);
  wait(500);
  if color_MineEntranceBlueText.findIn(AREA_MS, foundPnt) then
  begin
    writeln('Found color MineEntranceBlueText for Rock 2'+toStr(foundPnt));
    FastClick(Mouse_left);
