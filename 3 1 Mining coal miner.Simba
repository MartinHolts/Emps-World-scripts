Procedure GoToBank;
begin
    //Open quest tab
    MoveMouse(691, 91);
    wait(100);
    FastClick(Mouse_left);
    //Wait for 6-7 seconds to get to bank.
    wait(random(6000,7000));
    //Wait for 1-12 seconds 1 times in 50.
    if (random(1,50)=50) then
    begin
      wait(random(1000,12000));
    end;
end;

Procedure DepositeThingsInBank;
var
  x, y, counter: integer;

begin
  //Wait for BankBox
  while ((failCounter <= 65) AND (PrecedureComplete = 0) AND not (findColorTolerance(x, y, 9474460, 420, 270, 467, 324, 0))) do
  begin
  wait(100);
  failCounter := failCounter + 1;
  end;
  if (failcounter <= 64) then
  begin
    writeln('Found color BanBox');
  end else
  begin
    writeln('Didnt find color BanBox');
  end;
  failCounter := 0;
  MoveMouse(x + 15, y + 10);

  //Wait for blue text.
  while ((failCounter <= 65) AND (PrecedureComplete = 0) AND not (findColorTolerance(x, y, 16776960, 41, 32, 128, 47, 0))) do
  begin
  wait(100);
  failCounter := failCounter + 1;
  end;
  if (failcounter <= 64) then
  begin
    writeln('Found color blue text');
  end else
  begin
    writeln('Didnt find color blue text');
  end;
  failCounter := 0;
  FastClick(Mouse_left);


  //Wait for shoporange
  while ((failCounter <= 65) AND (PrecedureComplete = 0) AND not (findColorTolerance(x, y, 2070783, 131, 51, 373, 69, 0))) do
  begin
  wait(100);
  failCounter := failCounter + 1;
  end;
  if (failcounter <= 64) then
  begin
    writeln('Found color ShopOrange');
  end else
  begin
    writeln('Didnt find color ShopOrange');
  end;
  failCounter := 0;

  //Deposite coals.
  MoveMouse(437, 338);
  wait(200);
  FastClick(Mouse_left);
  wait(200);

  PrecedureComplete := 1;
end;

Procedure DepositeCoals;
var
  x, y: integer;
begin
end;

begin
  initAL;
  repeat
  GoToRock;
  ClickOnRocksFourTimes;    //8 rocks  8
  foundGolem;
  if (foundGolem = 1) then
  begin
    TeleToBarbGoToBank;
  end;
  foundGolem := 0;
  wait(150);
  ClickOnRocksFourTimes;    //8 rocks  16
  foundGolem;
  if (foundGolem = 1) then
  begin
    TeleToBarbGoToBank;
  end;
  foundGolem := 0;
  wait(150);
  ClickOnRocksFourTimes;    //8 rocks  24
  foundGolem;
  if (foundGolem = 1) then
  begin
    TeleToBarbGoToBank;
  end;
  foundGolem := 0;
  wait(150);
  ClickOnRocksTwice;        //4 rocks  28
  foundGolem;
  if (foundGolem = 1) then
  begin
    TeleToBarbGoToBank;
  end;
  foundGolem := 0;
  wait(150);
  foundGolem;
  if (foundGolem = 1) then
  begin
    TeleToBarbGoToBank;
  end;
  foundGolem := 0;
  GoToBank;
  DepositeThingsInBank;
  if (PrecedureComplete = 0) then
  begin
    DepositeThingsInBank;
  end;
  PrecedureComplete := 0;
  Until(False);
end.
