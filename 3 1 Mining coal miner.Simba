    //Wait for 3 seconds to mine rock.
    wait(5500);
  end;
  //Click on Rock 4
  MoveMouse(437, 302);
  wait(500);
  if color_MineEntranceBlueText.findIn(AREA_MS, foundPnt) then
  begin
    writeln('Found color MineEntranceBlueText for Rock 4'+toStr(foundPnt));
    FastClick(Mouse_left);
